<!-- New Buttons Section -->
  <div class="button-container">
    <a href="https://huggingface.co" target="_blank" class="custom-button">
      Hugging Face
    </a>
    <a href="https://nextjs-ai-chatbot-beta-ecru.vercel.app/" target="_blank" class="custom-button">
